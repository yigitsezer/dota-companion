<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/radiance_regular</item>
        <item name="android:navigationBarColor">#1F2024</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents.CompactMenu">
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
    </style>

    <style name="Widget.BottomNavigationViewCustom"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/goudy_trajan</item>
        <item name="colorOnSurface">#787F87</item>
        <item name="colorPrimary">#92BAE3</item>
        <item name="colorAccent">#787F87</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowColor">@android:color/holo_blue_light</item>
    </style>

    <style name="MatchSummaryView"
        parent="Theme.MaterialComponents.Light">
        <item name="fontFamily">@font/radiance_regular</item>
        <item name="colorOnSurface">#787F87</item>
        <item name="colorPrimary">#92BAE3</item>
        <item name="colorAccent">#787F87</item>
    </style>

    <style name="TabBarTheme"
        parent="Theme.MaterialComponents.Light">
        <item name="fontFamily">@font/penumbra</item>
        <item name="colorOnSurface">#787F87</item>
        <item name="colorPrimary">#92BAE3</item>
        <item name="colorAccent">#787F87</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#303030</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">30</item>
    </style>

    <style name="HeroFragmentTheme"
        parent="Theme.MaterialComponents.Light">
        <item name="fontFamily">@font/penumbra</item>
        <item name="font">@font/penumbra</item>
        <item name="android:textColor">#C1C1C1</item>
    </style>

    <style name="HeroInfoTheme"
        parent="Theme.MaterialComponents.Light">
        <item name="fontFamily">@font/memo_std_regular</item>
        <item name="font">@font/memo_std_regular</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ItemDescriptionTheme"
        parent="Theme.MaterialComponents.Light">
        <item name="fontFamily">@font/memo_std_regular</item>
        <item name="font">@font/memo_std_regular</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ItemDescriptionTheme.Shadow"
        parent="Theme.MaterialComponents.Light">
        <item name="fontFamily">@font/memo_std_regular</item>
        <item name="font">@font/memo_std_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>
</resources>
